<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Sales.Helpers"
             x:Class="Sales.Views.EditProductPage" 
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="{i18n:Translate EditProduct}">
    <ContentPage.Content>
        <ScrollView BindingContext="{Binding EditProduct}">
            <StackLayout Padding="5">
                <Image Source="{Binding ImageSource}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChangeImageCommand}"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="{i18n:Translate ChangeImage}"
                       FontSize="Small"
                       HorizontalOptions="Center"
                />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Label Text="{i18n:Translate Description}"
                           Grid.Column="0"
                           Grid.Row="0"
                           VerticalOptions="Center"/>
                    <Entry
                           Placeholder="{i18n:Translate DescriptionPlaceholder}"
                           Grid.Column="1"
                           Grid.Row="0"
                           Text="{Binding Product.Description}">
                    </Entry>
                    <Label Text="{i18n:Translate Price}"
                            Grid.Column="0"
                           Grid.Row="1"
                           VerticalOptions="Center"/>
                    <Entry
                    Keyboard="Numeric"
                    Placeholder="{i18n:Translate PricePlaceholder}"
                         Grid.Column="1"
                           Grid.Row="1"
                        Text="{Binding Product.Price}">
                    </Entry>
                    <Label Text="{i18n:Translate Remarks}"
                           Grid.Column="0"
                           Grid.Row="2"
                           VerticalOptions="Center"/>
                    <Editor
                        VerticalOptions="FillAndExpand"
                        Grid.Column="1"
                        Grid.Row="2"
                        Text="{Binding Product.Remarks}">
                    </Editor>
                    <Label Text="{i18n:Translate IsAvailable}"
                           Grid.Column="0"
                           Grid.Row="3"
                           VerticalOptions="Center"/>
                    <Switch 
                        Grid.Column="1"
                        Grid.Row="3"
                        HorizontalOptions="End"
                        IsToggled="{Binding Product.IsAvailable}">
                    </Switch>
                </Grid>


                <ActivityIndicator
                    IsRunning="{Binding IsRunning}"
                    VerticalOptions="CenterAndExpand">
                </ActivityIndicator>
                <Button
                Text="{i18n:Translate Save}"
                BorderRadius="23"
                HeightRequest="46"
                BackgroundColor="Navy"
                TextColor="White"
                IsEnabled="{Binding IsEnabled}"
                Command="{Binding SaveCommand}">
                </Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>